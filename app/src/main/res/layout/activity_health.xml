<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Health"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Pediatrician"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_Preferred_pediatrician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Number"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_personal_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Number"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_work_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Diet"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_special_diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_allergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medication on regular basis"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_medication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learning difficulties"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Health_learning_difficulties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>